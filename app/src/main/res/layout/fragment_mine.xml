<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <me.cl.lingxi.common.view.JellyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mine_top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/img_mine_bc">

                <LinearLayout
                    android:id="@+id/user_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/user_img"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/img_user"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/user_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:paddingLeft="@dimen/activity_padding"
                        android:paddingRight="@dimen/activity_padding"
                        android:text="签名：暂无签名"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/mine_reply"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                style="@style/mine_item"
                android:drawableLeft="@drawable/ic_favorite"
                android:drawableRight="@drawable/ic_more"
                android:text="我的回复"/>

            <TextView
                android:id="@+id/mine_relevant"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                style="@style/mine_item"
                android:drawableLeft="@drawable/ic_smile"
                android:drawableRight="@drawable/ic_more"
                android:text="与我相关"/>

            <TextView
                android:id="@+id/mine_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                style="@style/mine_item"
                android:drawableLeft="@drawable/ic_set"
                android:drawableRight="@drawable/ic_more"
                android:text="设置"/>

            <TextView
                android:id="@+id/mine_about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                style="@style/mine_item"
                android:drawableLeft="@drawable/ic_link"
                android:drawableRight="@drawable/ic_more"
                android:text="关于lingci"/>

            <TextView
                android:id="@+id/mine_sign_out"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                style="@style/mine_item"
                android:drawableLeft="@drawable/ic_wrong"
                android:drawableRight="@drawable/ic_more"
                android:text="退出登录"/>
        </LinearLayout>
    </me.cl.lingxi.common.view.JellyScrollView>

</LinearLayout>